<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eagora.echosoft.eagora.InicioActivity">

    <RelativeLayout
        android:layout_width="366dp"
        android:layout_height="601dp"
        android:layout_marginLeft="-133dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="481dp"
            android:layout_height="39dp"
            android:layout_above="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:text="Bem Vindo ao eAgora?"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="-8dp"
            tools:layout_editor_absoluteY="257dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="478dp"
            android:layout_height="28dp"
            android:layout_above="@+id/btn_entrar"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="47dp"
            android:text="Faça o planejamento de sua viagem"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="-7dp"
            tools:layout_editor_absoluteY="296dp" />

        <Button
            android:id="@+id/btn_entrar"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="258dp"
            android:layout_height="43dp"
            android:layout_above="@+id/textView5"
            android:layout_alignLeft="@+id/cadastro_btn"
            android:layout_alignStart="@+id/cadastro_btn"
            android:layout_marginBottom="25dp"
            android:background="@color/common_google_signin_btn_text_light_focused"
            android:text="Entrar"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="359dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="470dp"
            android:layout_height="30dp"
            android:layout_above="@+id/cadastro_btn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:text="Ainda não possui cadastro?"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="430dp" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="1117dp"
            android:layout_height="233dp"
            android:layout_above="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="21dp"
            app:srcCompat="@drawable/logoeagora"
            tools:layout_editor_absoluteX="-326dp"
            tools:layout_editor_absoluteY="64dp" />

        <Button
            android:id="@+id/cadastro_btn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="258dp"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp"
            android:background="@color/common_google_signin_btn_text_light_focused"
            android:text="Cadastre-se"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="visible"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="468dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
