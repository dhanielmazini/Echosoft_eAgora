<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eagora.echosoft.eagora.LoginActivity">


    <RelativeLayout
        android:layout_width="363dp"
        android:layout_height="577dp"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="363dp"
            android:layout_height="180dp"
            android:layout_above="@+id/emailLogin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp"
            app:srcCompat="@drawable/logoeagora"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="286dp"
            android:layout_height="27dp"
            android:layout_above="@+id/emailLogin"
            android:layout_centerHorizontal="true"
            android:text="Email"
            android:textColor="?attr/editTextColor"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="148dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="284dp"
            android:layout_height="31dp"
            android:layout_alignBottom="@+id/txtSenha"
            android:layout_alignLeft="@+id/txtSenha"
            android:layout_alignStart="@+id/txtSenha"
            android:layout_marginBottom="43dp"
            android:text="Senha"
            android:textColor="?attr/editTextColor"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="214dp" />

        <EditText
            android:id="@+id/txtSenha"
            android:layout_width="292dp"
            android:layout_height="49dp"
            android:layout_above="@+id/botaoLogin"
            android:layout_alignLeft="@+id/txt"
            android:layout_alignStart="@+id/txt"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/botaoLogin"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="188dp"
            android:layout_height="39dp"
            android:layout_marginBottom="17dp"
            android:background="@color/common_google_signin_btn_text_light_focused"
            android:text="Entrar"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="302dp"
            android:layout_above="@+id/textView24"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="383dp"
            android:layout_height="40dp"
            android:layout_above="@+id/login_button"
            android:layout_alignEnd="@+id/textView23"
            android:layout_alignRight="@+id/textView23"
            android:text="            OU\n\n\n\n"
            android:textAlignment="center"
            android:textColor="?attr/editTextColor"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="100dp" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="184dp"
            android:layout_height="27dp"
            android:layout_above="@+id/sign_in_button"
            android:layout_alignLeft="@+id/sign_in_button"
            android:layout_alignStart="@+id/sign_in_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="27dp"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="393dp" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="186dp"
            android:layout_height="39dp"
            android:layout_alignLeft="@+id/botaoLogin"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/botaoLogin"
            android:layout_marginBottom="40dp"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="432dp" />

        <EditText
            android:id="@+id/emailLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView23"
            android:layout_alignEnd="@+id/txt"
            android:layout_alignLeft="@+id/textView23"
            android:layout_alignRight="@+id/txt"
            android:layout_alignStart="@+id/textView23"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
